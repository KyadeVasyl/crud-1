<main class='main'>
  <div class='main__content'>
    <header class='header'>
      <a href='/'>
        <img src='/svg/cross_back.svg' />
      </a>
    </header>

    <h1 class='title title--center title--small'>Назвіть
      плейліст</h1>
    <form
      method='post'
      action='/spotify-create{{#if data.isMix}}?isMix=true{{/if}}'
      class='form'
    >
      <input
      required
        placeholder='Назва'
        type='text'
        class='form__field'
        name="name"
      />
      <button class='form__button'>Створити</button>
    </form>
  </div>
</main>