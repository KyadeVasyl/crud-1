
<main class='main'>
  {{#with data}}
    <div class='main__content'>
      <h1 class='title title--center'>{{name}}</h1>

      <ul class="track__list card">
          {{#each tracks}}
              <li class="track">
                  <img src="{{image}}" >
                  <div class="track__content">
                      <strong class="track__name">{{name}}</strong>
                      <em class="track__author">{{author}}</em>
                  </div>

                  {{!-- <a href="/spotify-track-add?playListId={{../playListId}}&trackId={{id}}">
                    <img src="/svg/add_track_button.svg" >
                  </a> --}}

                  <form method="post" action="/spotify-track-add">
                      <input name="playlistId" type="hidden" value="{{../playlistId}}">
                      <input name="trackId" type="hidden" value="{{id}}">
                      <button type="submit">
                          <img src="/svg/add_track_button.svg" >
                      </button>
                  </form>
              </li>
          {{/each}}
      </ul>
    </div>
  {{/with}}
</main>