<main class='main'>
  {{#with data}}
    <div class='main__content'>

      <h1 class='title title--center'>{{name}}</h1>
      <form
        method='post'
        action='/spotify-search'
        class='search'
      >
        <img src='/svg/search.svg' />
        <input
          placeholder='Введіть запит'
          name='value'
          type='search'
          class='search__input'
          value='{{value}}'
        />
        <button class='search__button'>Пошук</button>
      </form>

      <ul class='playlist__list'>
        {{#each list}}
          <li class='playlist'>
            <img
              src='{{image}}'
              height='100px'
              width='100px'
            />
            <div class='playlist__content'>
              <strong
                class='playlist__name'
              >{{name}}</strong>
              <em class='playlist__amount'>{{amount}}
                пісні</em>
            </div>
          </li>
        {{/each}}
      </ul>

    </div>
  {{/with}}
</main>